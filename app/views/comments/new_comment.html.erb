<h1>Comment on a comment</h1>
<div>
    <%= @parent_comment.body %>
</div>
<br><br>

<%= form_for @comment , url: comment_comments_path ,  html: {class:"form"} do |f| %>
    <div class="form-group">
        <%= f.text_area :body,:placeholder => "Enter your reply", :class=>"form-control" %>
    </div>
    <%= f.submit "Reply", :class =>"btn btn-primary" %>
<% end %>